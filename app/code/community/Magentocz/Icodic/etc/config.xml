<config>
    
    <modules>
        <Magentocz_Icodic>
            <version>1.0.0.0</version>
        </Magentocz_Icodic>
    </modules>

    <global>
    	<models>
			<magentocz_icodic>
		        <class>Magentocz_Icodic_Model</class>
			</magentocz_icodic>
			<customer>
                <!-- <rewrite>
					<address>Magentocz_Icodic_Model_Customer_Address</address>
				</rewrite> -->
            </customer>
			<sales>
				<!-- <rewrite>
					<order_address>Magentocz_Icodic_Model_Sales_Order_Address</order_address>
					<quote_address>Magentocz_Icodic_Model_Sales_Quote_Address</quote_address>
				</rewrite> -->
			</sales>
		</models>
		<helpers>
            <magentocz_icodic>
                <class>Magentocz_Icodic_Helper</class>
            </magentocz_icodic>
        </helpers>
		<resources>
            <magentocz_icodic_setup>
                <setup>
                    <module>Magentocz_Icodic</module>
                    <class>Magentocz_Icodic_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </magentocz_icodic_setup>
            <magentocz_icodic_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </magentocz_icodic_write>
            <magentocz_icodic_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </magentocz_icodic_read>
        </resources>		
		<blocks>
			<magentocz_icodic>
                <class>Magentocz_Icodic_Block</class>
            </magentocz_icodic> 
		</blocks>
        <fieldsets>
            <sales_copy_order_billing_address>                
                <ico><to_order>*</to_order></ico>
                <dic><to_order>*</to_order></dic>
            </sales_copy_order_billing_address>
            <sales_copy_order_shipping_address>
                <ico><to_order>*</to_order></ico>
                <dic><to_order>*</to_order></dic>
            </sales_copy_order_shipping_address>
            <sales_convert_quote>
                <ico><to_order>*</to_order></ico>
                <dic><to_order>*</to_order></dic>
            </sales_convert_quote>   
            <sales_convert_quote_address>
				<ico><to_order_address>*</to_order_address><to_customer_address>*</to_customer_address></ico>
                <dic><to_order_address>*</to_order_address><to_customer_address>*</to_customer_address></dic>
            </sales_convert_quote_address>
            <sales_convert_order_address>
            	<ico><to_quote_address>*</to_quote_address></ico>
                <dic><to_quote_address>*</to_quote_address></dic>
            </sales_convert_order_address>
            <customer_address>
                <ico><to_quote_address>*</to_quote_address></ico>
                <dic><to_quote_address>*</to_quote_address></dic>
            </customer_address>
    	</fieldsets>
    </global>

    <adminhtml>
    	<acl>
			<resources>
				<admin>
					<children>		
						<system>
							<children>
								<config>
									<children>
										<magentocz_modules translate="title" module="magentocz_icodic">
											<title>Magento CZ</title>
											<sort_order>61</sort_order>
										</magentocz_modules>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
      	<translate>
            <modules>
                <magentocz_icodic>
                    <files>
                        <default>Magentocz_Icodic.csv</default>
                    </files>
                </magentocz_icodic>
            </modules>
        </translate>         
    </adminhtml>    
    
    <frontend>
        <translate>
            <modules>
                <magentocz_icodic>
                    <files>
                        <default>Magentocz_Icodic.csv</default>
                    </files>
                </magentocz_icodic>
            </modules>
        </translate>
    </frontend>

    <default>
        <onestepcheckout>
            <sortordering_fields>
                <ico>20</ico>
                <dic>21</dic>
            </sortordering_fields>
        </onestepcheckout>    
    </default>
</config>
